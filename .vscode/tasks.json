{
    "version": "2.0.0",
    "tasks": [{
        "label": "build",
        "type": "shell",
        "command": "g++",
        "args": [
            "-I", "${workspaceFolder}/include",
            "${workspaceFolder}/src/*.cpp",
            "${file}",
            "-o", "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }]
}